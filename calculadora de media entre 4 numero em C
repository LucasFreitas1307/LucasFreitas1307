#include <stdio.h>

int main() {
    float  num1, num2, num3, num4, media ;
    printf("escreva um numero");
    scanf ("%f", &num1);
    printf("escreva um numero");
    scanf("%f", &num2);
    printf("escreva um numero");
    scanf("%f", &num3);
    printf("escreva um numero");
    scanf("%f", &num4);
    media = (num1 + num2 + num3 + num4 /4);
    printf("a media destes numero e %.2f\\n", media);
    return 0 ;

}
